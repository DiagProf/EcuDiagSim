<Page
    x:Class="EcuDiagSim.App.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Style="{StaticResource CommonPageStyle}"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <StackPanel Margin="{StaticResource MediumMargin}" Orientation="Vertical">
        <!--  Title  -->
        <TextBlock x:Uid="MainPage_Title" Style="{ThemeResource TitleTextBlockStyle}" />
        <MenuBar>
            <MenuBarItem Title="Select">
                <MenuFlyoutItem Text="LUA File" Click="MenuFlyoutItemSelectFile_OnClick" />
                <MenuFlyoutItem Text="LUA Folder" Click="MenuFlyoutItemSelectFolder_OnClick" />
            </MenuBarItem>
        </MenuBar>
        <Grid  Background="Transparent" ColumnDefinitions="50, Auto, *" RowDefinitions ="50, Auto, *">
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{x:Bind ViewModel.LuaWorkingDirectory, Mode=OneWay}" />
        </Grid>
        

    </StackPanel>
 

</Page>
